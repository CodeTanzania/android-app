<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tz.co.codetanzania">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="AA_DB_NAME" android:value="open_civic.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
        <meta-data
            android:name="AA_SERIALIZERS"
            android:value="tz.co.dawasco.model.adapter.UtilDateSerializer,
                           tz.co.dawasco.model.adapter.LongLatSerializer" />
        <meta-data
            android:name="AA_MODELS"
            android:value="tz.co.dawasco.model.Comment,
                           tz.co.dawasco.model.Jurisdiction,
                           tz.co.dawasco.model.Reporter,
                           tz.co.dawasco.model.Service,
                           tz.co.dawasco.model.ServiceGroup,
                           tz.co.dawasco.model.ServiceRequest"/>

        <activity android:name="com.github.codetanzania.IDActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name" />

        <activity android:name="com.github.codetanzania.IssueTicketGroupsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.github.codetanzania.ServiceGroupItemsActivity"
            android:label="@string/app_name" />

    </application>

</manifest>