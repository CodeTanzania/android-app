<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tz.co.codetanzania">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.github.codetanzania.IDActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name" />

        <activity android:name="com.github.codetanzania.IssueTicketGroupsActivity"
            android:label="@string/app_name" />

        <activity android:name="com.github.codetanzania.ServiceGroupItemsActivity"
            android:label="@string/app_name" />

        <activity android:name="com.github.codetanzania.CivilianProfileActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="@string/app_name"/>

        <!-- Splash screen activity performs authorization by requesting new token from the server -->
        <activity android:name="com.github.codetanzania.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Edit user profile -->
        <activity android:name="com.github.codetanzania.EditProfileActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="@string/app_name" />

        <activity android:name="com.github.codetanzania.ErrorActivity"
            android:label="@string/app_name"/>

    </application>

</manifest>