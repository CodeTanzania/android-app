<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_OpenIssueTicket"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_capture_picture"/>

            <fragment
                android:id="@+id/frag_CapturePreview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:name="com.github.codetanzania.ui.fragment.ImageCaptureFragment"/>

            <TextView
                android:id="@+id/tv_CurrentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_GetLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_fetch_location"/>

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="@string/text_select_area" />-->

            <!-- Map showing issue location -->
            <!--<FrameLayout-->
                <!--android:id="@+id/frl_MapView"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="175dp">-->

                <!--&lt;!&ndash; Map will be rendered here &ndash;&gt;-->

            <!--</FrameLayout>-->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_NextAction"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:gravity="end">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic_black_24dp"
            style="?attr/borderlessButtonStyle"
            android:layout_weight="1"
            android:contentDescription="@string/text_record_audio" />

        <EditText
            android:id="@+id/et_Msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@null"
            android:padding="10dp"
            android:hint="@string/text_issue_description"/>

        <Button
            android:id="@+id/btn_NextAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/action_send"
            android:textColor="@color/colorAccent"
            style="?attr/borderlessButtonStyle"
            android:drawableEnd="@drawable/ic_send_24dp"/>

    </LinearLayout>

</RelativeLayout>