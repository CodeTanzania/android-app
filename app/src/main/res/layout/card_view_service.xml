<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_Service"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- We could use RadioGroup Instead. But things won't be looking great. -->
    <TextView
        android:id="@+id/tv_SelectedService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:text="@string/text_check_mark"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_ServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/tv_SelectedService"/>

    <TextView
        android:id="@+id/tv_ServiceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_SelectedService"
        android:layout_below="@id/tv_ServiceName"
        android:layout_alignParentBottom="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>