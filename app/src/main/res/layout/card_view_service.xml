<?xml version="1.0" encoding="utf-8"?>
<com.github.codetanzania.ui.view.ServiceCardView
    android:id="@+id/crd_Service"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/rl_Service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/tv_ServiceCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circular_lbl"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_ServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_ServiceCode"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:maxLines="1"
            android:ellipsize="end"/>

    </RelativeLayout>

</com.github.codetanzania.ui.view.ServiceCardView>