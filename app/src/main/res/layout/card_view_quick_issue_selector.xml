<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_CardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_select_issue_category"
        android:textAllCaps="true"
        style="@style/TitleTextAppearance"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/HomeCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- The parallax view pager enables user to quickly select issue category
            They want to report -->
            <com.andraskindler.parallaxviewpager.ParallaxViewPager
                android:id="@+id/view_pager_ItemsSlider"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="top|center">

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:ci_drawable="@drawable/ic_circle_indicator_selected_24dp"
                    app:ci_drawable_unselected="@drawable/ic_circle_indicator_unselected_24dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/default_margin"
                android:background="#eeeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_OpenOpen311ServiceList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:drawableStart="@drawable/ic_format_list_bulleted_black_48dp_wrapper"
                    android:layout_gravity="start|center_vertical"
                    android:text="@string/text_view_categories"
                    android:textColor="#999999"
                    android:drawablePadding="16dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>