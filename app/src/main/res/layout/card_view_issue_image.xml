<?xml version="1.0" encoding="utf-8"?>
<!-- This card presents a picture captured when an issue was submitted by the user -->
<android.support.v7.widget.CardView
    android:id="@+id/cardView_Picture"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    app:cardCornerRadius="2dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <FrameLayout
        android:id="@+id/fr_Picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Picture is rendered at the center of the card-view -->
        <ImageView
            android:id="@+id/imgView_Picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="@string/text_capture_picture" />

    </FrameLayout>

</android.support.v7.widget.CardView>