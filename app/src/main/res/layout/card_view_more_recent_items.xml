<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_MoreMediaItems"
    android:layout_width="120dip"
    android:layout_height="120dip"
    style="@style/ItemCardView">

    <FrameLayout
        android:id="@+id/frame_MoreMediaItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_media_item_gradient">

        <TextView
            android:id="@+id/tv_moreMediaItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="@string/text_view_more"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </FrameLayout>

</android.support.v7.widget.CardView>