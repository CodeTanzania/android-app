<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_RecentItem"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    style="@style/ItemCardView">

    <FrameLayout
        android:id="@+id/fl_ThumbnailContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/item_picture"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:orientation="vertical"
        android:background="@color/transparentColorAccent"
        android:layout_gravity="bottom|center"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_RelativeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_issue_date"
            android:textColor="@android:color/white"
            android:textAlignment="center"/>

    </LinearLayout>

</android.support.v7.widget.CardView>