<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tv_LogContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_internal_note"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/text_log_content"/>

    <TextView
        android:id="@+id/tv_LogExtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_LogContent"
        android:text="@string/text_log_extras"
        android:textSize="10sp"/>

</RelativeLayout>