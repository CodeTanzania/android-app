<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_LocationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/tv_LocationMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_touch_app_black_24dp"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_LocationTextContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_toEndOf="@id/tv_LocationMarker"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp"
            android:text="@string/text_location_instruction"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Horizontal Progressbar is shown while location is being loaded -->
        <ProgressBar
            android:id="@+id/pb_LocationFetchIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_toEndOf="@id/tv_LocationMarker"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/bottom_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@id/rl_LocationTitle"
        android:layout_marginTop="16dp"/>

    <FrameLayout
        android:id="@+id/frl_Map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_separator">

        <org.osmdroid.views.MapView android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_GPSDetectionStrategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@android:color/white"
            app:elevation="12dp"
            app:fabSize="normal"
            android:src="@drawable/ic_my_location_black_24dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="100dp"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_gravity="bottom"
            android:gravity="end">

            <Button
                style="?attr/borderlessButtonStyle"
                android:id="@id/btn_Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_next"
                android:layout_gravity="end"
                android:drawableEnd="@drawable/ic_chevron_right_accent_24dp"/>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>